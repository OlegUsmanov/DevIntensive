<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


<style name="icon">
<item name="android:layout_width">@dimen/size_small_24</item>
<item name="android:layout_height">@dimen/size_small_24</item>
</style>

<style name="icon.left" parent="icon">
<item name="android:layout_gravity">top|left</item>
<item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
<item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
</style>

<style name="icon.right" parent="icon">
<item name="android:layout_gravity">top|right</item>
<item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
<item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
</style>

<style name="break_line">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">@dimen/line_size</item>
<item name="android:layout_marginLeft">@dimen/size_large_72</item>
<item name="android:background">@color/grey_light</item>
</style>
    <style name="break_line.colaps" parent="break_line">
        <item name="android:layout_height">@dimen/spacing_larger_112</item>
    </style>

<style name="block_text">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:enabled">false</item>
<item name="android:focusable">false</item>
<item name="android:fontFamily">sans-serif-condensed</item>
<item name="android:inputType">text</item>
<item name="android:textColor">@color/black</item>
<item name="android:textColorHint">@color/grey</item>
</style>

<style name="info_block">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">wrap_content</item>
<item name="android:layout_marginTop">@dimen/spacing_normal_8</item>
<item name="android:layout_marginBottom">@dimen/spacing_normal_8</item>
<item name="android:orientation">horizontal</item>
</style>

<style name="block_text_hint">
<item name="android:layout_width">0dp</item>
<item name="android:layout_height">@dimen/size_big_72</item>
<item name="android:layout_gravity">center_vertical</item>
<item name="android:layout_marginTop">@dimen/spacing_normal_8</item>
<item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
<item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
<item name="android:layout_weight">1</item>
<item name="android:gravity">center_vertical</item>
<item name="android:orientation">vertical</item>
</style>

<style name="block_text_hint.myself">
<item name="android:layout_height">wrap_content</item>
<item name="android:inputType">textMultiLine</item>
</style>

<style name="block_text_wighet">
<item name="android:layout_width">match_parent</item>
<item name="android:layout_height">wrap_content</item>
</style>

<style name="rating">
<item name="android:layout_width">0dp</item>
<item name="android:layout_height">56dp</item>
<item name="android:layout_weight">1</item>
<item name="android:gravity">center</item>
<item name="android:orientation">vertical</item>
</style>


<style name="block_text.rating" parent="block_text">
<item name="android:textSize">@dimen/font_size_title_20</item>
<item name="android:textColor">@color/white</item>
<item name="android:gravity">center_horizontal</item>
</style>

<style name="custom_dialog">
<item name="android:fullDark">@android:color/transparent</item>
</style>

<dimen name="spacing_normal_8">8dp</dimen>
    </resources>
