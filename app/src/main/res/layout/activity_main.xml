<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.activities.MainActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_medial_24"
                android:paddingTop="@dimen/spacing_medial_24"
                android:textAlignment="center">

                <LinearLayout
                    style="@style/rating"
                    android:layout_weight="0.25">

                    <TextView
                        style="@style/block_text.rating"
                        android:text="5"/>

                    <TextView
                        style="@style/block_text.rating"
                        android:text="Рейтинг"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="@dimen/spacing_large_56"
                    android:background="@color/grey_light"/>

                <LinearLayout
                    style="@style/rating"
                    android:layout_weight="0.5">

                    <TextView
                        style="@style/block_text.rating"
                        android:text="2500"/>

                    <TextView
                        style="@style/block_text.rating"
                        android:text="Строчек кода"/>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/line_size"
                    android:layout_height="@dimen/spacing_large_56"
                    android:background="@color/grey_light"/>

                <LinearLayout
                    style="@style/rating"
                    android:layout_weight="0.25">

                    <TextView
                        style="@style/block_text.rating"
                        android:text="5"/>

                    <TextView
                        style="@style/block_text.rating"
                        android:text="Проектов"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/info_block">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_call_black_24dp"/>


                <LinearLayout
                    style="@style/block_text_hint">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/user_number"
                            style="@style/block_text"
                            android:hint="@string/telefone_number"
                            android:inputType="phone"
                            android:text="@string/user_number"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_phone_in_talk_black_24dp"/>


            </LinearLayout>

            <View
                style="@style/break_line"/>

            <LinearLayout
                style="@style/info_block">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_email_black_24dp"/>


                <LinearLayout
                    style="@style/block_text_hint">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/e_mail"
                            style="@style/block_text"
                            android:hint="E-mail"
                            android:text="@string/user_email"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/ic_send_black_24dp"/>

            </LinearLayout>

            <View
                style="@style/break_line"/>

            <LinearLayout
                style="@style/info_block">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/vk_circle"/>


                <LinearLayout
                    style="@style/block_text_hint">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/vk"
                            style="@style/block_text"
                            android:hint="@string/profile_vk"
                            android:text="@string/id_profile_vk"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/eye"/>

            </LinearLayout>

            <View
                style="@style/break_line"/>

            <LinearLayout
                style="@style/info_block">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/github_circle"/>


                <LinearLayout
                    style="@style/block_text_hint">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/git"
                            style="@style/block_text"
                            android:hint="@string/profile_git"
                            android:text="@string/id_profile_git"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <ImageView
                    style="@style/icon.right"
                    android:src="@drawable/eye"/>

            </LinearLayout>

            <View
                style="@style/break_line"/>

            <LinearLayout
                style="@style/info_block">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/account_circle"/>


                <LinearLayout
                    style="@style/block_text_hint.myself">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/myself"
                            style="@style/block_text"
                            android:hint="@string/about_myself"
                            android:inputType="textMultiLine"
                            android:text="@string/myself_text"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>



